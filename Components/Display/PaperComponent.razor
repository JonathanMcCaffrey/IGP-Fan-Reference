<div class="paper">
    @ChildContent
</div>

<style>
    .paper {
        padding-top: 24px;
        padding-left: 24px;
        padding-right: 24px;
        padding-bottom: 24px;
        margin: auto;
        overflow-y: auto;
        overflow-x: hidden;
        border: 4px solid var(--paper-border);
        background-color: var(--paper);
        box-shadow: 0px 6px var(--paper-border);
        width: 100%;
    }
</style>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }

}